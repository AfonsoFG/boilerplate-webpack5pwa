{
    "name": "boilerplate-webpack5pwa",
    "version": "1.0.0",
    "description": "Boilerplate webpack5 pwa app description here",
    "main": "index.js",
    "author": "Afonso Gomes",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development webpack serve --config configs/webpack.dev.js",
