        "copy-webpack-plugin": "^10.2.2",
        "cross-env": "^7.0.3",
        "css-loader": "^6.5.1",
        "css-minimizer-webpack-plugin": "^3.4.1",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-webpack": "^0.13.2",
        "eslint-plugin-prettier": "^4.0.0",
